<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>
    @* <link href="https://fonts.googleapis.com/css2?family=Bungee&display=swap" rel="stylesheet"> *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=League+Gothic:wdth@84.8&family=League+Spartan:wght@100..900&display=swap"
        rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=League+Gothic:wdth@84.8&family=League+Spartan:wght@100..900&family=Nabla&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyApp.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="flex flex-col w-screen h-screen bg-purple-900 overflow-hidden">
    <header
        class="w-full h-14 px-1 bg-gradient-to-r from-slate-500 via-violet-950 to-slate-500 flex justify-start items-center fixed top-0 ">
        <nav class="w-full flex justify-start items-center gap-5">
            <div id="avatar-container" class="w-12 h-12 rounded-full bg-black"></div>
            <form asp-controller="ListedGames" asp-action="Index" method="get"
                class="flex flex-row w-5/6 md:w-2/5 h-8 bg-gray-200 rounded-full text-center shadow-sm shadow-gray-800">
                <input id="search-game" name="title"
                    class="w-full h-full text-center rounded-l-full text-center shadow-md shadow-gray-800"
                    placeholder="Search" />
                <button type="submit"
                    class="bg-yellow-200 shadow-gray-800 shadow-sm shadow-black rounded-r-full hover:bg-yellow-500"><img
                        src="/static/svgs/send.svg" alt="search" class="w-full h-full"></button>
                <!-- Add a submit button -->
            </form>
        </nav>
    </header>

    <div class="flex flex-col w-full h-full flex-1 pt-14 bg-violet-950">
        <main role="main" class="flex flex-col w-full h-full justify-start items-center">
            @RenderBody()
        </main>
    </div>

    @* <footer class="w-full h-10 bg-gray-400 flex justify-center items-center fixed bottom-0">
        Footer content here
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
