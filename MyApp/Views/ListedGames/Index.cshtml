@model List<ListedGame> // Need to make changes to ui, but data is reaching here
@{
    ViewData["Title"] = "Home Page";
}
<div class="flex justify-start items-center w-full h-20 bg-slate-950 gap-2">
    <div class="flex justify-center items-center w-2/5 md:w-1/12 h-full">
        <a asp-controller="Home" asp-action="Index"
            class="flex justify-center items-center w-11/12 h-3/4 bg-yellow-500 rounded-lg text-center">Back to
            deals</a>
    </div>
    <div class="flex justify-start items-center w-3/5 h-full md:w-10/12">
        <h2
            class="text-white text-xl md:text-3xl w-full max-h-full text-start overflow-hidden text-ellipsis line-clamp-2">
            Searched:
            Batman
        </h2>
    </div>
</div>
<div class="flex flex-col justify-start items-start w-full md:w-10/12 h-full bg-slate-950 rounded-b-lg py-2 gap-2 overflow-y-auto"
    style="background: url('/static/images/neon2.jpg') center/cover no-repeat;">
    <div class="w-full h-auto grid grid-cols-1 md:grid-cols-3 gap-4">
        @foreach (var game in Model)
        {
            <div class="w-full h-60 md:h-48">
                <div class="flex flex-col justify-start items-center w-full h-full">
                    <h3
                        class="w-auto max-w-full h-auto max-h-1/6 bg-white/40 text-center text-md font-bold text-ellipsis whitespace-nowrap overflow-hidden rounded-lg">
                        @game.Title
                    </h3>
                    <a asp-controller="Game" asp-action="Index" asp-route-gameID="int"
                        class="w-full md:w-3/4 h-3/6 bg-white/20">
                        <img src="@game.Thumb" alt="game" class="w-full h-full object-cover">
                    </a>
                    <div class="flex flex-row w-full md:w-3/4 h-1/6 mt-1 rounded-l-md rounded-r-md px-2 py-1 bg-white/40">
                        <a asp-controller="" asp-action=""
                            class="flex justify-center items-center w-1/2 h-full bg-white text-center rounded-l-md">
                            Details
                        </a>
                        <a href="" target="_blank"
                            class="flex justify-center items-center w-1/2 h-full bg-pink-200 text-center rounded-r-md">
                            Cheapest Deal
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>